<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Widgets">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Material Buttons"
           android:textSize="20sp"/>
       <com.google.android.material.button.MaterialButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Material Button"
           app:cornerRadius="20dp"/>
       <com.google.android.material.button.MaterialButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Material Button"
           android:backgroundTint="@color/teal_200"
           app:cornerRadius="2dp"/>
       <com.google.android.material.button.MaterialButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Material Button"
           app:icon="@android:drawable/ic_menu_gallery"
           android:backgroundTint="@color/teal_200"
           app:cornerRadius="2dp"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Toggle Buttons"
           android:textSize="20sp"/>
       <ToggleButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Chips"
           android:textSize="20sp"/>
       <com.google.android.material.chip.Chip
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="checkable"
           android:checkable="true"
           android:backgroundTint="@color/teal_200"/>

       <com.google.android.material.chip.Chip
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Strok"
           app:chipStrokeColor="@color/teal_200"
           app:chipStrokeWidth="2dp"
           />
       <com.google.android.material.chip.Chip
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Corner Radiuse"
          app:chipCornerRadius="0dp"
           />
       <com.google.android.material.chip.Chip
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Chip Icon"
           app:chipIcon="@android:drawable/ic_menu_gallery"
           />

       <androidx.appcompat.widget.SwitchCompat
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Switch"
           android:checked="true"/>

   </LinearLayout>

</ScrollView>